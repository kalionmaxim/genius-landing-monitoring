# Website to monitor
WEBSITE_URL=https://l.genius.space/free/

# Check interval in seconds (60 = every minute)
CHECK_INTERVAL=60

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Email Configuration (Optional - leave empty to disable)
EMAIL_FROM=your.email@gmail.com
EMAIL_TO=alerts@example.com
EMAIL_PASSWORD=your_gmail_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Content Validation (Optional)
# Minimum content length in bytes - alerts if response is too short (default: 1000)
MIN_CONTENT_LENGTH=1000
# Required text that must be present in the response (optional, leave empty to disable)
REQUIRED_CONTENT=
